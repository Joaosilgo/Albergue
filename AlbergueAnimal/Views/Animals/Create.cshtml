@model AlbergueAnimal.Models.Animal

@{
    ViewData["Title"] = "Criar Animal";
}

<h2>Criar Animal</h2>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RacaId" class="control-label"></label>
                <select asp-for="RacaId" class="form-control" asp-items="ViewBag.RacaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--<label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>-->
                <label asp-for="Genero"></label><br />
                <input type="radio" asp-for="Genero" value="Macho" checked>Macho<br>
                <input type="radio" asp-for="Genero" value="Fêmea">Fêmea<br>
            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label"></label><br />
                <!--<input asp-for="Cor" class="form-control" />-->
                <select asp-for="Cor" class="form-control">
                    <option>Preto</option>
                    <option>Branco</option>
                    <option>Castanho</option>
                    <option>Cinzento</option>
                    <option>Amarelo</option>
                    <option>Laranja</option>
                </select>
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEntrada" class="control-label"></label>
                <input asp-for="DataEntrada" class="form-control" />
                <span asp-validation-for="DataEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataVacina" class="control-label"></label>
                <input asp-for="DataVacina" class="form-control" />
                <span asp-validation-for="DataVacina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fotografia</label>
                <input type="file" class="form-control" name="ThePicture" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
