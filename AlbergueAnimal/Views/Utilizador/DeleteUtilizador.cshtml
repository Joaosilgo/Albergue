@model AlbergueAnimal.Models.Utilizador
@{
    ViewData["Title"] = "DeleteUtilizador";
}

<h2>DeleteUtilizador</h2>

@*<h2>Remover</h2>*@

<h3>Tem a certeza que pretende Banir este Utilizador?</h3>
<div>
    <h4>Utilizador</h4>

    <div>
        @{
            if (Model.imageContent != null && Model.imageMimeType.Contains("image"))
            {
                string imageBase64 = Convert.ToBase64String(Model.imageContent);
                string imageSrc = string.Format("data:" + Model.imageMimeType + ";base64,{0}", imageBase64);
                <img src="@imageSrc" alt="Profile picture of @Model.Nome" style="max-height:100px; max-width:120px" class="img-responsive img-rounded" />
            }
        }
    </div>



    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Morada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Morada)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Genero)
        </dd>
       
    </dl>

    <form asp-action="DeleteUtilizador">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-default" /> |
        <a asp-action="Index">Voltar à Lista</a>
    </form>
</div>